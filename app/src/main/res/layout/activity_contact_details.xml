<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailsActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/contact_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/primary"
        android:elevation="50dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:id="@+id/contact_ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/contactimg"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="name"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintTop_toBottomOf="@id/contact_bg"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        >
        <TextView
            android:id="@+id/number_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number: "
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/number_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0106765867"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="26dp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>